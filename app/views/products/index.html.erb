<%= flash[:notice] %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>RecordId</th>
      <th>Fieldname</th>
      <th>Fieldfrom</th>
      <th>Fieldto</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.recordid %></td>
        <td><%= product.fieldname %></td>
        <td><%= product.fieldfrom %></td>
        <td><%= product.fieldto %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_path, multipart: true do %>
  <div class="field">
  
    <%= select(:export,  [["Mark Exported Yes", 0], ["Mark Exported No",1]])  %>
  </div>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>

</div>
